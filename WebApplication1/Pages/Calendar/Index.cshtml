@page
@model WebApplication1.Pages.Calendar.IndexModel

@{
    ViewData["Title"] = "Calendar";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h2 class="mb-1">Calendar</h2>
        <div class="text-muted small">
            Manage your service schedule and daily bookings
        </div>
    </div>
</div>

<form method="post" asp-page-handler="LoadCalendar" class="mb-4 calendar-filters">
    <div class="row g-3 align-items-end">
        <div class="col-md-3">
            <label asp-for="BusinessId" class="form-label">Business Id</label>
            <input asp-for="BusinessId" class="form-control" />
        </div>
        <div class="col-md-3">
            <label asp-for="ServiceId" class="form-label">Service Id</label>
            <input asp-for="ServiceId" class="form-control" />
        </div>
        <div class="col-md-2">
            <label asp-for="Month" class="form-label">Month</label>
            <input asp-for="Month" class="form-control" />
        </div>
        <div class="col-md-2">
            <label asp-for="Year" class="form-label">Year</label>
            <input asp-for="Year" class="form-control" />
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-primary w-100 mt-1">
                Load Calendar
            </button>
        </div>
    </div>
</form>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <div class="alert alert-info mb-4">@Model.Message</div>
}

@if (Model.MonthlyCalendar != null && Model.MonthlyCalendar.Days.Any())
{
    <div class="d-flex align-items-center justify-content-between mb-3">
        <h3 class="h5 mb-0">
            Calendar: @Model.MonthlyCalendar.Month/@Model.MonthlyCalendar.Year
        </h3>

        <div class="calendar-legend">
            <span class="badge bg-success me-2">Open with free slots</span>
            <span class="badge bg-warning text-dark me-2">Open, but full</span>
            <span class="badge bg-secondary">Closed / Holiday / Past</span>
        </div>
    </div>

    <div class="row row-cols-7 gy-3 calendar-grid">
        @for (var d = 1; d <= DateTime.DaysInMonth(Model.Year, Model.Month); d++)
        {
            var dayInfo = Model.MonthlyCalendar.Days.FirstOrDefault(x => x.Day == d);
            var cssClass = "calendar-day-closed";
            var labelMain = "Closed";
            var labelSub = "";

            if (dayInfo != null && dayInfo.IsOpen)
            {
                if (dayInfo.HasFreeSlots)
                {
                    cssClass = "calendar-day-free";
                    labelMain = "Open";
                    labelSub = "Free";
                }
                else
                {
                    cssClass = "calendar-day-full";
                    labelMain = "Open";
                    labelSub = "Full";
                }
            }

            var isSelected = Model.SelectedDay.HasValue && Model.SelectedDay.Value == d;
            var selectedClass = isSelected ? " calendar-day-selected" : string.Empty;

            <div class="col">
                <div class="card calendar-day @cssClass@selectedClass">
                    <div class="card-body p-2 text-center">
                        <form method="post" asp-page-handler="LoadBookings">
                            <input type="hidden" name="BusinessId" value="@Model.BusinessId" />
                            <input type="hidden" name="ServiceId" value="@Model.ServiceId" />
                            <input type="hidden" name="Month" value="@Model.Month" />
                            <input type="hidden" name="Year" value="@Model.Year" />
                            <input type="hidden" name="Skip" value="@Model.Skip" />
                            <input type="hidden" name="Take" value="@Model.Take" />
                            <input type="hidden" name="day" value="@d" />

                            <button type="submit"
                                    class="btn btn-link text-decoration-none text-reset p-0 calendar-day-button">
                                <div class="calendar-day-number">@d</div>
                                <div class="calendar-day-status">
                                    @labelMain
                                    @if (!string.IsNullOrEmpty(labelSub))
                                    {
                                        <span class="d-block small">@labelSub</span>
                                    }
                                </div>
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
}

@if (Model.DailyBookings != null)
{
    <hr class="my-4" />
    <div class="d-flex align-items-center justify-content-between mb-2">
        <h3 class="h5 mb-0">Daily Bookings (@Model.DailyBookings.Date)</h3>
        <span class="badge bg-primary">
            @((Model.DailyBookings.Bookings?.Count ?? 0)) booking(s)
        </span>
    </div>

    @if (Model.DailyBookings.Bookings != null && Model.DailyBookings.Bookings.Any())
    {
        <div class="table-responsive">
            <table class="table align-middle mb-0">
                <thead>
                    <tr>
                        <th>Booking Id</th>
                        <th>Start</th>
                        <th>End</th>
                        <th>Status</th>
                        <th>Customer</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var b in Model.DailyBookings.Bookings)
                    {
                        <tr>
                            <td>@b.BookingId</td>
                            <td>@b.StartAtUtc</td>
                            <td>@b.EndAtUtc</td>
                            <td>@b.Status</td>
                            <td>@b.Customer?.FullName</td>
                            <td>@b.Customer?.Email</td>
                            <td>@b.Customer?.Phone</td>
                            <td class="text-end">
                                <form method="post" asp-page-handler="CancelBooking" class="d-inline">
                                    <input type="hidden" name="BusinessId" value="@Model.BusinessId" />
                                    <input type="hidden" name="ServiceId" value="@Model.ServiceId" />
                                    <input type="hidden" name="Month" value="@Model.Month" />
                                    <input type="hidden" name="Year" value="@Model.Year" />
                                    <input type="hidden" name="Skip" value="@Model.Skip" />
                                    <input type="hidden" name="Take" value="@Model.Take" />
                                    <input type="hidden" name="bookingId" value="@b.BookingId" />
                                    <input type="hidden" name="day" value="@Model.SelectedDay" />

                                    <button type="submit"
                                            class="btn btn-sm btn-danger"
                                            onclick="return confirm('Cancel this booking?');">
                                        Cancel
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <p>No bookings for this day.</p>
    }
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
